@model IEnumerable<Guest_book.Models.Guest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guest_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Guest_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Messages)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
